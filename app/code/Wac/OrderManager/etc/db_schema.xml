<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Flat Order">
        <column xsi:type="varchar" name="driver_name" nullable="true" length="255" comment="Driver name"/>        
        <column xsi:type="int" name="driver_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Driver ID"/>
    </table>
</schema>
